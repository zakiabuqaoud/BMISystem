<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="160dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:id="@+id/recordVariable"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:id="@+id/dateAndWeightTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/dateVariable"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/weightVariable"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:gravity="center"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/statusAndLengthTextView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/statusVariable"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/lengthVariable"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>