<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="80dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:id="@+id/foodVariable"
    android:orientation="horizontal"
    android:layout_marginBottom="40dp"
    >
    <ImageView
        android:id="@+id/FoodImageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/nameAndCategoryAndCalorieTextView"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/fi_nameVariable"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/fi_categoryVariable"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:id="@+id/fi_calorieVariable"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/EditAnd"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/main_col"
            android:textColor="@color/white"
            android:text="@string/edit"
            android:textStyle="bold"
            android:textSize="13dp"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="end|bottom"
            android:background="@color/main_col"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/x"
            android:gravity="center"
            />

    </LinearLayout>



</LinearLayout>